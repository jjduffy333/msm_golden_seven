<div class="page-header">
  <h1>Edit Actor</h1>
</div>

<form action="/update_actor/<%= @actor.id %>" class="form-horizontal">
  <!-- Label and input for dob -->
  <div class="form-group">
    <label for="dob" class="col-sm-2 control-label">
      Dob
    </label>
    <div class="col-sm-10">
      <input type="text" id="dob" name="dob" placeholder="<%=@actor.dob%>" class="form-control">
    </div>
  </div>

  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="name" name="name" placeholder="<%=@actor.name%>" class="form-control">
    </div>
  </div>

  <!-- Label and input for bio -->
  <div class="form-group">
    <label for="bio" class="col-sm-2 control-label">
      Bio
    </label>
    <div class="col-sm-10">
      <textarea id="bio" name="bio" placeholder="Bio" class="form-control" rows="3"><%=@actor.bio%></textarea>
    </div>
  </div>

  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">
      Image URL
    </label>
    <div class="col-sm-10">
      <input type="text" id="image_url" name="image_url" placeholder="<%=@actor.image_url%>" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Actor" class="btn btn-primary">
    </div>
  </div>
</form>
