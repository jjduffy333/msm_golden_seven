<div class = "page-header">
  <h1>Actors</h1>
</div>

<p><a href = "/actors/new_form" class = "btn btn-primary">Add a New Actor</a></p>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>DOB</th>
      <th>Name</th>
      <th>Bio</th>
      <th>View</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @actor.each do |actor| %>
      <tr>
        <td><img src = "<%= actor.image_url %>" width="80"></td>
        <td><%= actor.dob %></td>
        <td><%= actor.name %></td>
        <td><%= truncate(actor.bio) %></td>
        <td>
          <a href = "/actors/<%= actor.id %>" class="btn btn-primary" style="color:green">
            <i class = "fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href = "/actor/<%= actor.id %>/edit_form" class="btn btn-warning" style="color:orange">
            <i class = "fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href = "/delete_actor/<%= actor.id %>" class="btn btn-danger" style="color:red">
            <i class = "fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
